{
    "name": "chvndler.ch",
    "version": "1.0.0",
    "private": true,
    "description": "personal site.",
    "author": "Chandler Chappell <chan@ady.world> (https://chvndler.ch)",
    "license": "MIT",
    "homepage": "https://github.com/chvndler/chvndler.ch#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chvndler/chvndler.ch.git"
    },
    "scripts": {
        "prepare": "husky install",
        "dev": "next",
        "build": "next build",
        "build:analyze": "cross-env ANALYZE=true yarn build",
        "postbuild": "next-sitemap",
        "start": "next start",
        "lint": "next lint && stylelint '**/*.{css,scss}'",
        "tsc": "tsc --pretty --noEmit"
    },
    "dependencies": {
        "@juggle/resize-observer": "^3.4.0",
        "@radix-ui/colors": "0.1.8",
        "@radix-ui/react-aspect-ratio": "1.0.1",
        "@radix-ui/react-avatar": "1.0.1",
        "@radix-ui/react-collapsible": "1.0.1",
        "@radix-ui/react-context-menu": "2.0.1",
        "@radix-ui/react-dropdown-menu": "2.0.1",
        "@radix-ui/react-icons": "^1.1.1",
        "@radix-ui/react-navigation-menu": "^1.0.0",
        "@radix-ui/react-polymorphic": "^0.0.14",
        "@radix-ui/react-popover": "1.0.2",
        "@radix-ui/react-switch": "1.0.1",
        "@stitches/react": "^1.2.8",
        "clsx": "1.2.1",
        "date-fns": "^2.29.3",
        "gsap": "3.11.2",
        "hls.js": "1.2.4",
        "locomotive-scroll": "^4.1.4",
        "mousetrap": "1.6.5",
        "next": "13",
        "next-real-viewport": "^0.7.2",
        "next-themes": "^0.2.1",
        "react": "^18.2.0",
        "react-device-detect": "^2.2.2",
        "react-dom": "^18.2.0",
        "react-fast-marquee": "^1.3.5",
        "react-gsap": "^3.2.1",
        "react-merge-refs": "^2.0.1",
        "react-use-measure": "^2.1.1",
        "zustand": "4.1.1"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "13",
        "@next/eslint-plugin-next": "13",
        "@types/css-font-loading-module": "0.0.7",
        "@types/glob": "^8.0.0",
        "@types/mousetrap": "1.6.9",
        "@types/node": "18",
        "@types/react": "^18.0.17",
        "@types/react-dom": "18.0.7",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "5",
        "babel-eslint": "^10.1.0",
        "babel-plugin-optimize-clsx": "^2.6.2",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "3",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "7.31.8",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-simple-import-sort": "8",
        "husky": "8",
        "lint-staged": "13",
        "minimatch": "5",
        "next-sitemap": "3",
        "next-transpile-modules": "^9.0.0",
        "prettier": "2.7.1",
        "remark-slug": "^7.0.1",
        "sass": "1.55.0",
        "stylelint": "14.13.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "29",
        "stylelint-config-standard-scss": "6",
        "stylelint-prettier": "2",
        "typescript": "^4.7.4"
    },
    "engines": {
        "node": "16.x"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "arrowParens": "always",
        "tabWidth": 2,
        "printWidth": 120,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "react",
            "react-hooks",
            "simple-import-sort",
            "@typescript-eslint"
        ],
        "ignorePatterns": [
            "next.config.js",
            "next-sitemap.config.js",
            "src/lib/gsap/*",
            "./src/lib/gsap/*",
            "./public/*",
            "./.next/*",
            "./node_modules/*",
            "./.husky/*",
            "/public/*"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:import/recommended",
            "plugin:import/typescript",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier",
            "plugin:prettier/recommended",
            "plugin:@next/next/recommended"
        ],
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "rules": {
            "react/react-in-jsx-scope": 0,
            "react/display-name": 0,
            "react/prop-types": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/explicit-member-accessibility": 0,
            "@typescript-eslint/indent": 0,
            "@typescript-eslint/member-delimiter-style": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/no-var-requires": 0,
            "@typescript-eslint/no-use-before-define": 0,
            "@typescript-eslint/ban-ts-comment": 0,
            "simple-import-sort/imports": "warn",
            "simple-import-sort/exports": "warn",
            "import/no-named-as-default": "off",
            "import/no-named-as-default-member": "off",
            "react-hooks/exhaustive-deps": [
                "warn",
                {
                    "additionalHooks": "(useIsomorphicLayoutEffect)"
                }
            ],
            "react/no-unescaped-entities": 0,
            "curly": [
                "error",
                "multi-line"
            ],
            "react/jsx-no-target-blank": [
                2,
                {
                    "allowReferrer": true
                }
            ],
            "@typescript-eslint/no-unused-vars": [
                2,
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "no-console": [
                1,
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "prettier/prettier": [
                "warn"
            ],
            "@typescript-eslint/explicit-module-boundary-types": "off"
        },
        "settings": {
            "import/parsers": {
                "@typescript-eslint/parser": [
                    ".ts",
                    ".tsx"
                ]
            },
            "import/resolver": {
                "typescript": {
                    "alwaysTryTypes": true,
                    "project": "."
                }
            },
            "react": {
                "version": "detect"
            }
        }
    },
    "stylelint": {
        "ignoreFiles": [
            "**/*.{ts,tsx,js,jsx}"
        ],
        "extends": [
            "stylelint-config-standard",
            "stylelint-config-standard-scss",
            "stylelint-prettier/recommended"
        ],
        "plugins": [
            "stylelint-prettier"
        ],
        "rules": {
            "scss/at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "tailwind",
                        "layer",
                        "apply",
                        "variants",
                        "responsive",
                        "screen",
                        "include",
                        "for",
                        "mixin",
                        "if",
                        "else",
                        "warn",
                        "return",
                        "function",
                        "use",
                        "each"
                    ]
                }
            ],
            "selector-pseudo-class-no-unknown": [
                true,
                {
                    "ignorePseudoClasses": [
                        "global"
                    ]
                }
            ],
            "property-no-unknown": [
                true,
                {
                    "ignoreProperties": [
                        "font-named-instance"
                    ]
                }
            ],
            "declaration-block-trailing-semicolon": null,
            "no-descending-specificity": null,
            "number-leading-zero": null,
            "length-zero-no-unit": null,
            "alpha-value-notation": null,
            "selector-id-pattern": null,
            "selector-class-pattern": null,
            "property-no-vendor-prefix": null,
            "value-no-vendor-prefix": null,
            "scss/no-global-function-names": null,
            "scss/double-slash-comment-empty-line-before": null
        }
    },
    "lint-staged": {
        "*.@(ts|tsx|css|scss)": [
            "yarn lint --fix"
        ]
    }
}
